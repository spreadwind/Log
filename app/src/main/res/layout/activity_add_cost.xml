<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_cost_money"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <ImageView
            android:id="@+id/img_cost_money"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_cost_money" />

        <EditText
            android:id="@+id/edt_cost_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_cost_money"
            android:layout_marginLeft="10dp"
            android:textSize="30sp"
            android:inputType="numberDecimal"
            android:hint="消费金额"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <ImageView
            android:id="@+id/img_cost_type"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_cost_remarks" />

        <EditText
            android:id="@+id/edt_cost_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_cost_type"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"

            android:textSize="20sp"
            android:inputType="text"
            android:hint="填写类型"
            />
    </RelativeLayout>
    <!--<Spinner
        android:id="@+id/sp_cost_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="5"></Spinner>
-->


    <DatePicker
        android:id="@+id/dp_cost_time"
        android:layout_width="217dp"
        android:layout_height="114dp"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"/>

</LinearLayout>
